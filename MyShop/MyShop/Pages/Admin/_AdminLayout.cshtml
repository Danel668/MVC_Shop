<!DOCTYPE html>

<html>
<head>
   <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
</head>
<body>
    <h3 class="has-text-centered subtitle">Admin Panel</h3>
    <div class="container">
         <div class="columns">
            <div class="column is-3">
                <div class="menu">
                    <p class="menu-label">Store Menu</p>
                    <ul class="menu-list">
                        <li><a asp-page="/Admin/Product">Products</a></li>
                        <li><a asp-page="/Admin/OrderManagement">Orders</a></li>
                        <li><a asp-page="/Admin/Stock">Stock</a></li>
                    </ul>
                    <p class="menu-label"></p>
                    <ul class="menu-list">
                        <li><a asp-page="/Main/Main">Back to Main</a></li>
                    </ul>
                </div>
            </div>

            <div class="column is-9">
                @RenderBody()
            </div>
        </div>    
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
