<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar is-dark nav" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item">
          <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item">
          </a>
          <a class="navbar-item">
          </a>
          <a class="navbar-item">
            About us
          </a>
          @if (User.Identity.IsAuthenticated) {
              <a class="navbar-item" href="/Account/PersonalPlace">
                Personal Place
              </a>
              if (User.IsInRole("Admin"))
              {
                 <a class="navbar-item" href="/Admin/Product">
                    Admin Panel
                </a>       
              }
          }
        </div>
            
        <div class="navbar-tabs">
            <div class="navbar-item">
                <input class="input is-normal" placeholder="Searching"/>
            </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
                @if (User.Identity.IsAuthenticated)
                {
                  <a asp-controller="User" asp-action="Logout" class="button is-primary">
                      Sign out
                  </a>
                  
                }
                else {
                  <a asp-page="/Account/Login" class="button is-light">
                    Sign in
                  </a>
                  <a asp-page="/Account/Register" class="button is-primary">
                    <strong>Sign up</strong>
                  </a>
                }
              <a class="button is-light" asp-page="/Main/Cart">
                Cart
              </a>
            </div>
          </div>
        </div>
      </div>
</nav>
<div class="container">
    <main role="main" class="pb-3">
            @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="columns">
        <div class="column has-text-centered is-10">Copy Right</div>
        <div class="column">Call Back</div>
    </div>
</footer>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
