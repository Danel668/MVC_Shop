@page
@model MyShop.Pages.Account.PersonalPlaceModel
@{
}

<div id="app">
    <div class="columns">
        <div class="column">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    
                    <div class="has-text-centered subtitle">@Model._User.UserName</div>
                    <div class="has-text-centered subtitle">Last Name</div>
                    <div class="has-text-centered subtitle">
                        <a class="button is-success">
                            Edit
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="column is-9">
            <div class="tabs is-centered">
              <ul>
                <li class="is-active"><a>Purchase history</a></li>
                <li><a>In development</a></li>
              </ul>
            </div>
            @foreach (var order in Model.Orders)
            {
                <div class="card has-background-white-ter">
                    <div class="card-content">
                        <div class="columns">
                            <div class="column has-text-danger-dark has-text-left is-size-4">Number: #@order.Id</div>
                            <div class="column"></div>
                            <div class="column"></div>
                            <div class="column has-text-danger-dark has-text-right is-size-4">Completed</div>
                        </div>
                        <div class="columns">
                            <div class="column">Name: @order.FirstName</div>
                            <div class="column">Last Name: @order.LastName</div>
                            <div class="column">Email: @order.Email</div>
                            <div class="column has-text-right">Phone Number: @order.PhoneNumber</div>
                        </div>
                        <div class="columns">
                            <div class="column">Adress: @order.Address1</div>
                            <div class="column">Second Addres: @order.Address2</div>
                            <div class="column">City: @order.City</div>
                            <div class="column has-text-right">Post Code: @order.PostCode</div>
                        </div>
                        <div class="has-text-centered">
                            <a>Click Here</a>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>