@page
@model MyShop.Pages.Account.LoginModel
@{
}


<div class="columns">
    <div class="column"></div>
    <div class="column">
        <form method="post" class="box">
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input asp-for="LoginViewModel.UserName" class="input"  placeholder="Name">
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input asp-for="LoginViewModel.Password" class="input" type="password" placeholder="********">
                </div>
            </div>
            <button class="button is-primary">Sign in</button>
        </form>
    </div>
    <div class="column"></div>
</div>

